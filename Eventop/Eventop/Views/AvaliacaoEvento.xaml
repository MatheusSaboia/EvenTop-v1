<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eventop.Views.AvaliacaoEvento"
             x:Name="Avaliacao">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="20, 60, 20, 0">

            <Label FontSize="14" FontAttributes="Bold">Deixe seu comentário</Label>
            <Entry x:Name="txtComentarioParticipante"></Entry>

            <Button x:Name="btnAvaliar" Text="Comentar" Clicked="BtnAvaliar_Clicked"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>